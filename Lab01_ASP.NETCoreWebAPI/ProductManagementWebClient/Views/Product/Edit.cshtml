@model BusinessObjects.Product
@{
    ViewData["Title"] = "Edit";
    var categories = ViewData["Categories"] as List<BusinessObjects.Category>;
}
<h1>Edit</h1>
<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group mb-2">
                <label asp-for="ProductName" class="control-label mb-1">Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="UnitPrice" class="control-label mb-1">Unit price</label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="UnitInStock" class="control-label mb-1">Unit in stock</label>
                <input asp-for="UnitInStock" class="form-control" />
                <span asp-validation-for="UnitInStock" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CategoryId" class="control-label mb-1">Category</label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var std in categories)
                    {
                        <option value="@std.CategoryId">@std.CategoryName</option>
                    }
                </select>
            </div>

            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}